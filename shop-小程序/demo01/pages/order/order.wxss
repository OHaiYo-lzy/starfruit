.container {
  height: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.title {
  width: 100%;
  height: 88rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.title-sel {
  color: #24272c;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title-sel .line-style {
  background: #fff;
  height: 6rpx;
  width: 40rpx;
  position: relative;
  margin-top: 10rpx;
}

.title-sel-selected {
  color: #fcc307;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title-sel-selected .line-style {
  background: #fcc307;
  height: 6rpx;
  width: 90rpx;
  position: relative;
  margin-top: 10rpx;
}

.swiper {
  width: 90%;
  height: 1050rpx;
  flex: 1;
  overflow: scroll;
  margin: 0 auto;
}

.scbg {
  background-color: #fff;
  width: 100%;
  height: 100%;
  left: 0rpx;
  right: 0rpx;
  top: 0rpx;
  position: absolute;
}


.image {
  width: 80rpx;
  height: 80rpx;
}

.box {
  margin-top: 10rpx;
  background-color: white;
  padding-bottom: 5rpx;
  padding-top: 5rpx;
  font-size: 30rpx;
}

.border {
  display: flex;
  justify-content: space-between;
  border: 1px solid rgba(20, 20, 20, 0.067);
  padding: 2vh;
  border-radius: 10rpx
}

.name {
  height: 150rpx;
  margin-left: 1rpx;
  margin-right: 1rpx;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

